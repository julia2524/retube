header
    a(href="/").header__logo
        i.fab.fa-youtube
        span ReTube
    nav    
        ul
            li  
                a(href="/search") 
                    i.fas.fa-search
            if loggedIn
                li 
                    a(href="/videos/upload")
                        i.fas.fa-video
                li 
                    a(href="/users/edit") Edit Profile 
                li  
                    a(href="/users/logout") Log Out
                li 
                    a(href=`/users/${loggedInUser._id}`) 
                        if loggedInUser.avatarUrl === ""
                            i.far.fa-user
                        else 
                            img.header__avatar(src=loggedInUser.avatarUrl)
            else 
                li  
                    a(href="/join") Join
                li  
                    a(href="/login").header__btn
                        i.far.fa-user  로그인
                
            
                
                    
                    
        